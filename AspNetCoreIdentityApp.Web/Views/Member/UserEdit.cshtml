@{
	ViewData["Title"] = "UserEdit";
}

@model UserEditViewModel;

@*Client Validationi elave edirik, ValidationScriptPartialda gelir ordan gotururuk. Istifade meqsedi her defe back-ende sorgu atmamaq ve bizim data annotation ile verdiyimiz validationlari yerindece gostermek*@
@section Scripts
	{
	@await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}


<div class="row">
	<div class="col-md-6 offset-md-3">

		<h2>Kullanıcı Güncəlləmə</h2>


		@if (TempData["SuccessMessage"] != null)
		{
			<div class="alert alert-info" role="alert">
				@TempData["SuccessMessage"]
			</div>
		}

		<div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>

		<form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">

			<div class="row mb-3">
				<label for="Username" class="col-md-4 col-form-label" asp-for="Username"></label>
				<div class="col-md-8">

					<input asp-for="Username" class="form-control">
					<span class="text-danger" asp-validation-for="Username"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
				<div class="col-md-8">
					<input asp-for="Email" class="form-control">
					<span class="text-danger" asp-validation-for="Email"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label for="Phone" class="col-md-4 col-form-label" asp-for="Phone"></label>
				<div class="col-md-8">
					<input asp-for="Phone" class="form-control">
					<span class="text-danger" asp-validation-for="Phone"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label for="BirtDate" class="col-md-4 col-form-label" asp-for="BirtDate"></label>
				<div class="col-md-8">
					<input asp-for="BirtDate" class="form-control">
					<span class="text-danger" asp-validation-for="BirtDate"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label for="City" class="col-md-4 col-form-label" asp-for="City"></label>
				<div class="col-md-8">
					<input asp-for="City" class="form-control">
					<span class="text-danger" asp-validation-for="City"></span>
				</div>
			</div>


			<div class="row mb-3">
				<label for="Gender" class="col-md-4 col-form-label" asp-for="Gender"></label>
				<div class="col-md-8">
					<select class="form-control" asp-for="Gender" asp-items="ViewBag.genderList">
						<option value="">Cinsiyyət seçin</option>
					</select>
					<span class="text-danger" asp-validation-for="Gender"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label for="Picture" class="col-md-4 col-form-label" asp-for="Picture"></label>
				<div class="col-md-8">
					<input type="file" class="form-control" asp-for="Picture" />
					<span class="text-danger" asp-validation-for="Picture"></span>
				</div>
			</div>


			<div class="row mb-3">
				<div class="col-md-8 offset-md-4">
					<button type="submit" class="btn btn-primary">Güncəllə</button>
				</div>
			</div>

		</form>
	</div>
</div>
