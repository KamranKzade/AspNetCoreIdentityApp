@{
	ViewData["Title"] = "Index";
}

@model UserViewModel

<div class="row">
	<div class="col-md-6 offset-md-3 text-center">
		<user-picture-thumbnail picture-url="@Model.PictureUrl" class="rounded" style="width:300px; height:300px;"></user-picture-thumbnail>
	</div>
</div>

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h1>Kullanıcı bilgiləri</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Kullanıcı Adı</th>
					<th>Email</th>
					<th>PhoneNumber</th>
				</tr>
			</thead>

			<tbody>

				<tr>
					<td>@Model.UserName</td>
					<td>@Model.Email</td>
					<td>@Model.PhoneNumber</td>
				</tr>

			</tbody>
		</table>
	</div>
</div>