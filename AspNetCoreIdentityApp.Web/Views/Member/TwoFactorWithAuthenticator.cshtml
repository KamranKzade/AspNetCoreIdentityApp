@model AuthenticatorViewModel

@{
	ViewData["Title"] = "TwoFactorWithAuthenticator";
}

<h2>İki adımlı kimlik doğrulama</h2>

<div class="row">
	<div class="col-md-12">
		<div class="alert alert-info">
			1.Adım: Aşağıdakı gr kodu telefonunuza Google/Microsoft Authenticator uyğulamasına taratınız. Veya Aşağıdakı kodu telefonunuza giriniz.
		</div>


		<strong class="text-danger">Key:</strong>
		<strong class="text-primary">@Model.SharedKey</strong>

		<div class="alert alert-info mt-3">
			2.Adım: Telefonunuzdakı kodu aşağıdakı alana giriniz.
		</div>

		<form asp-action="TwoFactorWithAuthenticator" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="VerificationCode"></label>
				<input asp-for="VerificationCode" class="form-control" />
				<span asp-validation-for="VerificationCode"></span>

				<input type="hidden" asp-for="AuthenticatorUri" />
				<input type="hidden" asp-for="SharedKey" />
			</div>

			<div class="form-group mt-3">
				<input type="submit" value="Aktiv et" class="btn btn-success" />
			</div>
		</form>

	</div>
</div>